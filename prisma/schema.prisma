// Archivo de esquema de Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enumeraci칩n para roles de usuario
enum RolUsuario {
  REGULAR
  ADMIN
}

// Modelo Personaje con sus campos y relaci칩n con Usuario
model Personaje {
  id         Int       @id @default(autoincrement())
  nombre     String
  especie    String
  estado     String
  origen     String
  tipo       String
  genero     String
  foto       String
  url        String
  flag       Boolean   @default(true)
  idUsuario  Int
  usuario    Usuario   @relation(fields: [idUsuario], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

// Modelo Usuario con rol y relaci칩n uno a muchos con Personaje
model Usuario {
  id           Int        @id @default(autoincrement())
  nombres      String
  correo       String     @unique
  contrase침a   String
  rol          RolUsuario @default(REGULAR)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  Personaje    Personaje[]
}
